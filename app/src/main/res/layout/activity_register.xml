<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6EB5FF"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#6EB5FF"
            android:gravity="center"
            android:orientation="vertical"
            app:layoutDescription="@xml/activity_main_scene"
            tools:context=".MainActivity">

            <!-- 프로필 수정 버튼 -->
            <android.widget.Button
                android:id="@+id/profileBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/roundedbutton"
                android:drawableTop="@drawable/profile" />

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/ginseng"
                android:text="이름이 뭐에요?
                (터치해서 입력해주세요.)"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                 />

            <LinearLayout
                android:id="@+id/Add_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <!-- Recycle_layout 추가 -->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Regiser_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <android.widget.Button
                    android:id="@+id/Btn_address"
                    android:layout_width="264dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/textbackground"
                    android:fontFamily="@font/ginseng"
                    android:gravity="center"
                    android:text="어디에 살아요?"
                    android:textSize="16sp"
                     />

                <android.widget.Button
                    android:id="@+id/Btn_Call"
                    android:layout_width="264dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/textbackground"
                    android:fontFamily="@font/ginseng"
                    android:gravity="center"
                    android:text="전화번호가 있나요?"
                    android:textSize="16sp"
                     />

                <android.widget.Button
                    android:id="@+id/Btn_message"
                    android:layout_width="264dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/textbackground"
                    android:fontFamily="@font/ginseng"
                    android:gravity="center"
                    android:text="메세지를 남겨주세요."
                    android:textSize="16sp"
                    />

                <android.widget.Button
                    android:id="@+id/Regi_Complete"
                    android:layout_width="264dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/textbackground"
                    android:fontFamily="@font/ginseng"
                    android:gravity="center"
                    android:text="등록"
                    android:textSize="16sp"
                     />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</layout>
